{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2020",
    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    /* Emit */
    "outDir": "./dist",
    //"declaration": true,
    //"sourceMap": true,
    //"noEmit": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": false,
    /* Completeness */
    "skipLibCheck": true
  },
  "tsc-alias": {
    //подключение плагина который добавляет .js в импортах при компиляции
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": [
    "src/**/*"
  ]
}
